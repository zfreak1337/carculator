@{
    ViewBag.Title = "Home Page";
}

@using (Html.BeginForm("Index", "Home", "Post"))
{
    <input type="number" name="firstNumber" value="0" />
    <input type="number" name="secondNumber" value="0" />
    <select name="operation">
        @for (int i = 0; i < ViewBag.Operation.Length; i++)
        {
            <option value="@ViewBag.Operation[i].Value">@ViewBag.Operation[i].Text</option>
        }
    </select>
    <input type="submit" value="Результат" />
    <p>@ViewBag.Result</p>
     <p>Данный Web калькулятор создан студентами группы ИВТ-173 Апельганцем Дмитрием и Гонашевской Зоей</p>
}